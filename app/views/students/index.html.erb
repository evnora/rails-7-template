<!-- app/views/students/index.html.erb -->

<div>
  <h1>
    List of all students
  </h1>
</div>

<hr>

<div>
  <h2>
    Add a new student
  </h2>

  <!-- Replace your old <form> here with this link -->
  <p>
    <a href="/students/new">
      Create another student
    </a>
  </p>
</div>

<hr>

<div>
  <table border="1">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Enrollments count</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th></th>
    </tr>

    <% @list_of_students.each do |a_student| %>
      <tr>
        <td><%= a_student.id %></td>
        <td><%= a_student.name %></td>
        <td><%= a_student.enrollments_count %></td>
        <td><%= time_ago_in_words(a_student.created_at) %> ago</td>
        <td><%= time_ago_in_words(a_student.updated_at) %> ago</td>
        <td>
          <a href="/students/<%= a_student.id %>">
            Show details
          </a>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<hr>
