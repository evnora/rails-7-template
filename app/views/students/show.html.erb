<div>
  <div>
    <h1>
      Student #<%= @the_student.id %> details
    </h1>

    <div>
      <div>
        <a href="/students">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_student/<%= @the_student.id %>">
          Delete student
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_student.name %>
      </dd>

      <dt>
        Enrollments count
      </dt>
      <dd>
        <%= @the_student.enrollments_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_student.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_student.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit student
    </h2>

    <form action="/modify_student/<%= @the_student.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_student.name %>">
      </div>

      <div>
        <label for="enrollments_count_box">
          Enrollments count
        </label>

        <input type="text" id="enrollments_count_box" name="query_enrollments_count" value="<%= @the_student.enrollments_count %>">
      </div>

      <button>
        Update student
      </button>
    </form>
  </div>
</div>

<hr>
