<h1>Homepage</h1>

<h2>Courses</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Students</th>
    <th>Actions</th>
  </tr>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.title %></td>
      <td><%= course.enrollments_count %></td>
      <td>
        <a href="/courses/<%= course.id %>">View</a>
        <a href="/delete_course/<%= course.id %>">Delete</a>
      </td>
    </tr>
  <% end %>
</table>
<p><a href="/courses/new">Add Course</a></p>

<h2>Students</h2>
<table>
  <tr>
    <th>Name</th>
    <th>Enrollments</th>
    <th>Actions</th>
  </tr>
  <% @students.each do |student| %>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.enrollments_count %></td>
      <td>
        <a href="/students/<%= student.id %>">View</a>
        <a href="/delete_student/<%= student.id %>">Delete</a>
      </td>
    </tr>
  <% end %>
</table>
<p><a href="/students/new">Add Student</a></p>
