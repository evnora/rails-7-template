 <!-- app/views/page_templates/home.html.erb -->
 <h1>Homepage</h1>

 <h2>Courses</h2>
 <table>
   <tr>
     <th>Title</th>
     <th>Students</th>
     <th>Actions</th>
   </tr>
   <% @courses.each do |course| %>
     <tr>
       <td><%= course.title %></td>
       <td><%= course.enrollments_count %></td>
       <td>
         <a href="/courses/<%= course.id %>">View</a>
         <a href="/delete_course/<%= course.id %>">Delete</a>
       </td>
     </tr>
   <% end %>
 </table>
 <p>
   <a href="/courses/new">Add Course</a>
 </p>

 <h2>Students</h2>
 <p>
   <a href="/students">See Students</a>
   <a href="/students/new">Add Student</a>
 </p>
